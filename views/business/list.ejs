<% include ../partials/header.ejs%>
<% include ../partials/main_nav.ejs%>

  <!-- Main Content -->
  <main class="container listContacts">
    <div class="row">
        <h1><%= title %></h1>
        <br>
        <div>
            <a href="/business/add" class="btn btn-primary align-self-end" role="button">
                <i class="fas fa-plus-circle"></i> 
                Add a new Contact
            </a>                
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr>
                    <th class="text-center">Contact Name</th>
                    <th class="text-center">Contact Number</th>
                    <th class="text-center">Email</th>
                    <th class="text-center" colspan="2">Actions</th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < BusinessList.length; count++) { %>
                    <tr>
                        <td class="text-center"><%= BusinessList[count].contactName %></td>
                        <td class="text-center"><%= BusinessList[count].contactNumber %></td>
                        <td class="text-center"><%= BusinessList[count].email %></td>
                        <td class="text-center">
                            <a href="/business/edit/<%= BusinessList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i></a>
                        </td>
                        <td class="text-center">
                            <a href="/business/delete/<%= BusinessList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>

<% include ../partials/footer.ejs%>