<% include ../partials/header.ejs%>
<% include ../partials/main_nav.ejs%>
<!-- Content for the Add business contact page -->
<div class="container add">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= item._id %>"
                    >
                    <label for="itemTextField">Contact Name</label>
                    <input type="text" class="form-control"
                        id="itemTextField"
                        placeholder="Enter your name here"
                        name="contactName" 
                        value="<%= item.contactName %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="QtyTextField">Contact Number</label>
                    <input type="number" class="form-control"
                    id="QtyTextField"
                    placeholder="000-000-0000"
                    name="contactNumber" 
                    value="<%= item.contactNumber %>"
                    required>
                </div>
                <br />
                <div class="form-group">
                    <label for="statusTextField">Email</label>
                    <input type="text" name="email" value="<%= item.email %>" class="form-control"/>
                </div>               
                <br/>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> 
                    Submit
                </button>
                
                <a href="/business/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>

            </form>
        </div>

    </div>
</div>

<% include ../partials/footer.ejs%>